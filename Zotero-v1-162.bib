	journal = {International Journal of Nursing Studies},
	author = {Al-Ghareeb, Amal and Hillel, Stav and McKenna, Lisa and Cleary, Michelle and Visentin, Denis and Jones, Martin and Bressington, Daniel and Gray, Richard},
	month = may,
	year = {2018},
	keywords = {RetractionReviewBib-v1-2020-10, systematic reviews of retracted papers},
	pages = {8--13},
	file = {Al-Ghareeb et al. - 2018 - Retraction of publications in nursing and midwifer.pdf:/Users/jodi/Zotero/storage/4XTGJQSJ/Al-Ghareeb et al. - 2018 - Retraction of publications in nursing and midwifer.pdf:application/pdf}
}

